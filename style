/*assigning variables*/
$red: tomato;
$purple: #6e6bc9;
$green: #12de7b;
$white: #ebe7d1;

/*using multiple identifiers*/
h1, h2 {
  color:$red;
}
li {
  list-style-type: none;
}

/*form input exampls*/
input[type=text] {
  background-color: $red;
}
input[type=password] {
  background-color:
    $red;
}


/*css selector examples*/
button:hover {
  background-color: $green;
}
a::before {
  content: "\261B Click here to travel to... ";
  font-weight: bold;
}
a::after{
  content: "\261A";
  font-weight:bold;
}

/*media queries*/
@media  (min-width: 600px){
  body {
  background-color:$green;
  }
}
@media (max-width: 699px){
  body {
    background-color: $green;
  }
}

/*CSS/Flexbox grid*/
#grid-container > div{
  background-color: $red;
  font-size: 20px;
  margin: 30px;
  padding: 30px;
  width: 200px;
}
.grid {
  background-color: $red;
  text-align: center;
  display: grid;
  padding: 20px;
  grid-column-gap: 20px;
  grid-row-gap: 20px;
  grid-template-columns: auto auto;
}
.grid-item {
  font-size: 30px;
  background-color: $purple;
}
.grid-item:hover {
  background-color: $green;
}

/*bootstrap grid */
.row {
  background-color: $red;
  padding: 20px;
  border: 2px solid black;
}
.col-sm {
  text-align: center;
  background-color: $green;
  padding: 20px;
  border: 2px solid black;
}
.col-sm:hover {
  background-color: $purple;
}
/*nested css elements*/
div {
#body-text {
    font-size: 30px;
    font-weight: bold;
  }
p::selection {
  color:$red;
  background-color:$green;
  }
  p {
    color:$green;
    font-size: 25px;
  }
}


/*Inheritance Example*/
%message{
  font-family: sans-seriff;
  font-size: 20px;
  font-weight: bold;
  border: 2px solid black;
  padding: 20px;
  margin: 20px;
}
.success {
  @extend %message;
  background-color: $green;
}
		
